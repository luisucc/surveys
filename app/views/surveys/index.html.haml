%h1 Listing surveys
.well
  %table.table.table-striped.table-hover.table-responsive
    %thead
      %tr
        %th Name
        %th Description
        %th{:colspan => "3"}
    %tbody
      - @surveys.each do |survey|
        %tr
          %td= survey.name
          %td= truncate(survey.description, length: 158, omission: '... (continued)')
          %td= link_to 'Show', survey
          %td= link_to 'Edit', edit_survey_path(survey)
          %td= link_to 'Destroy', survey, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Survey', new_survey_path
